<div class="container">

    <!-- Tarjetas de Resumen -->
    <div class="summary-cards">
        <div class="card inc">
            <h3>Ingresos</h3>
            <div class="amount" id="totalIncome">0 Bs</div>
        </div>
        <div class="card exp">
            <h3>Gastos</h3>
            <div class="amount" id="totalExpense">0 Bs</div>
        </div>
        <div class="card profit">
            <h3>Ganancia Neta</h3>
            <div class="amount" id="totalProfit">0 Bs</div>
        </div>
    </div>

    <!-- Filtros -->
    <div class="filters">
        <button class="filter-btn active" onclick="setFilter('week')">Esta Semana</button>
        <button class="filter-btn" onclick="setFilter('month')">Este Mes</button>
        <button class="filter-btn" onclick="setFilter('all')">Todo el Historial</button>
    </div>

    <!-- Formulario de Ingreso -->
    <div class="input-section">
        <h3> Registrar Nuevo Flete</h3>
        <form onsubmit="event.preventDefault(); addTrip();">
            <div class="form-group">
                <label>Descripci贸n del Viaje / Ruta</label>
                <input type="text" id="tripDesc" placeholder="Ej: Caracas - Valencia" required>
            </div>
            <div class="form-row">
                <div class="form-group">
                    <label>Fecha</label>
                    <input type="date" id="tripDate" required>
                </div>
                <div class="form-group">
                    <label>Monto Cobrado (Ingreso)</label>
                    <input type="number" id="tripIncome" placeholder="0.00" step="0.01" required>
                </div>
            </div>
            <div class="form-group">
                <label>Gastos Totales (Gas, Peaje, Comida)</label>
                <input type="number" id="tripExpense" placeholder="0.00" step="0.01" value="0">
            </div>
            <button type="submit" class="btn-add"> GUARDAR FLETE</button>
        </form>
    </div>

    <!-- Tabla de Datos -->
    <div class="history-section">
        <div class="history-header">
            <h3>Historial de Viajes</h3>
            <button onclick="clearAllData()" style="color:red; background:none; border:none; cursor:pointer; font-size:0.9rem;">Borrar Todo</button>
        </div>
        <div style="overflow-x: auto;">
            <table id="tripsTable">
                <thead>
                    <tr>
                        <th>Fecha</th>
                        <th>Descripci贸n</th>
                        <th>Ingreso</th>
                        <th>Gasto</th>
                        <th>Ganancia</th>
                        <th>Acci贸n</th>
                    </tr>
                </thead>
                <tbody id="tableBody">
                    <!-- Filas generadas por JS -->
                </tbody>
            </table>
        </div>
        <div id="emptyMessage" style="padding: 20px; text-align: center; color: #999; display: none;">
            No hay registros en este periodo.
        </div>
    </div>

</div>

<script>
    // --- ESTADO Y DATOS ---
    let trips = JSON.parse(localStorage.getItem('topoTrips')) || [];
    let currentFilter = 'week'; // 'week', 'month', 'all'

    // Inicializar fecha al d铆a de hoy
    document.getElementById('tripDate').valueAsDate = new Date();

    // --- FUNCIONES PRINCIPALES ---

    function addTrip() {
        const desc = document.getElementById('tripDesc').value;
        const date = document.getElementById('tripDate').value;
        const income = parseFloat(document.getElementById('tripIncome').value);
        const expense = parseFloat(document.getElementById('tripExpense').value) || 0;

        if (!desc || isNaN(income) || !date) {
            alert("Por favor completa los campos obligatorios.");
            return;
        }

        const newTrip = {
            id: Date.now(), // ID 煤nico
            date,
            desc,
            income,
            expense,
            profit: income - expense
        };

        trips.push(newTrip);
        saveData();
        render();
        
        // Limpiar formulario (mantener fecha)
        document.getElementById('tripDesc').value = '';
        document.getElementById('tripIncome').value = '';
        document.getElementById('tripExpense').value = '';
    }

    function deleteTrip(id) {
        if(confirm('驴Eliminar este registro de flete?')) {
            trips = trips.filter(t => t.id !== id);
            saveData();
            render();
        }
    }

    function clearAllData() {
        if(confirm('锔 驴Est谩s seguro de BORRAR TODO el historial? Esto no se puede deshacer.')) {
            trips = [];
            saveData();
            render();
        }
    }

    function saveData() {
        // Ordenar por fecha (m谩s reciente primero)
        trips.sort((a, b) => new Date(b.date) - new Date(a.date));
        localStorage.setItem('topoTrips', JSON.stringify(trips));
    }

    // --- FILTROS DE TIEMPO ---

    function setFilter(filterType) {
        currentFilter = filterType;
        
        // Actualizar botones visuales
        document.querySelectorAll('.filter-btn').forEach(btn => btn.classList.remove('active'));
        event.target.classList.add('active'); // El bot贸n que se hizo click
        
        render();
    }

    function getFilteredTrips() {
        const now = new Date();
        
        if (currentFilter === 'all') {
            return trips;
        }

        return trips.filter(trip => {
            const tripDate = new Date(trip.date + 'T00:00:00'); // Fix zona horaria simple
            
            if (currentFilter === 'month') {
                return tripDate.getMonth() === now.getMonth() && 
                       tripDate.getFullYear() === now.getFullYear();
            }
            
            if (currentFilter === 'week') {
                // L贸gica de semana: Lunes a Domingo
                const dayOfWeek = now.getDay(); // 0 = Domingo, 1 = Lunes
                const diff = now.getDate() - dayOfWeek + (dayOfWeek === 0 ? -6 : 1); // Ajustar para que lunes sea el principio
                const monday = new Date(now.setDate(diff));
                monday.setHours(0,0,0,0);
                
                // Resetear 'now' porque setDate lo mut贸
                now.setHours(23,59,59,999);
                
                return tripDate >= monday && tripDate <= now;
            }
        });
    }

    // --- RENDERIZADO (MOSTRAR EN PANTALLA) ---

    function render() {
        const filteredTrips = getFilteredTrips();
        const tbody = document.getElementById('tableBody');
        const emptyMsg = document.getElementById('emptyMessage');
        
        tbody.innerHTML = '';

        let totalInc = 0;
        let totalExp = 0;

        if (filteredTrips.length === 0) {
            emptyMsg.style.display = 'block';
        } else {
            emptyMsg.style.display = 'none';
            
            filteredTrips.forEach(trip => {
                totalInc += trip.income;
                totalExp += trip.expense;

                const tr = document.createElement('tr');
                tr.innerHTML = `
                    <td>${formatDate(trip.date)}</td>
                    <td>${trip.desc}</td>
                    <td class="col-money money-pos">+${trip.income.toFixed(2)}</td>
                    <td class="col-money money-neg">-${trip.expense.toFixed(2)}</td>
                    <td class="col-money" style="font-weight:bold;">${trip.profit.toFixed(2)}</td>
                    <td>
                        <button class="btn-delete" onclick="deleteTrip(${trip.id})">Borrar</button>
                    </td>
                `;
                tbody.appendChild(tr);
            });
        }

        // Actualizar tarjetas
        const totalProfit = totalInc - totalExp;
        document.getElementById('totalIncome').textContent = totalInc.toFixed(2) + ' Bs';
        document.getElementById('totalExpense').textContent = totalExp.toFixed(2) + ' Bs';
        document.getElementById('totalProfit').textContent = totalProfit.toFixed(2) + ' Bs';
    }

    function formatDate(dateString) {
        const options = { year: 'numeric', month: 'short', day: 'numeric' };
        return new Date(dateString + 'T00:00:00').toLocaleDateString('es-ES', options);
    }

    // Iniciar
    render();

</script>

</body>
</html>
